<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1>Service History</h1>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Service Type</th>
        <th>Patient Name</th>
        <th>Doctor</th>
        <th>Notes</th>
        <th>Blood Pressure</th>
        <th>Respiratory Rate</th>
        <th>Pulse Rate</th>
        <th>Temperature</th>
        <th>Medication</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(service => { %>
        <tr>
          <td><%= service.service_id %></td>
          <td><%= service.date %></td>
          <td><%= service.service_type %></td>
          <td><%= service.patient_name %></td>
          <td><%= service.doctor_in_charge %></td>
          <td><%= service.medical_notes %></td>
          <td><%= service.blood_pressure %></td>
          <td><%= service.respiratory_rate %></td>
          <td><%= service.pulse_rate %></td>
          <td><%= service.temperature %></td>
          <td><%= service.medication %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/history">Back to History</a>
</body>
</html>
