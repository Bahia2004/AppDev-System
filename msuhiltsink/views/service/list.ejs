<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service List</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #ffffff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        th, td {
            padding: 10px 15px;
            text-align: center;
        }
        th {
            background-color: #007bff;
            color: #ffffff;
            font-weight: bold;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #e9f5ff;
        }
        td {
            border-bottom: 1px solid #ddd;
        }
        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }
        a:hover {
            color: #0056b3;
        }
        .no-services {
            text-align: center;
            color: #888;
            font-style: italic;
        }
        .add-button {
            display: block;
            text-align: center;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #28a745;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            width: 200px;
            transition: background-color 0.3s;
        }
        .add-button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <h1>Service List</h1>
    <table>
        <thead>
            <tr>
                <th>Patient ID</th>
                <th>Patient Name</th>
                <th>Doctor In Charge</th>
                <th>Date</th>
                <th>Service Type</th>
                <th>Blood Pressure</th>
                <th>Pulse Rate</th>
                <th>Respiratory Rate</th>
                <th>Temperature</th>
                <th>Medication</th>
                <th>Medical Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (services.length > 0) { %>
                <% services.forEach(service => { %>
                    <tr>
                        <td><%= service.patient_id %></td>
                        <td><%= service.patient_name %></td>
                        <td><%= service.doctor_in_charge %></td>
                        <td><%= new Date(service.date).toLocaleDateString("en-US", { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                        <td><%= service.service_type %></td>
                        <td><%= service.blood_pressure %></td>
                        <td><%= service.pulse_rate %></td>
                        <td><%= service.respiratory_rate %></td>
                        <td><%= service.temperature %></td>
                        <td><%= service.medication %></td>
                        <td><%= service.medical_notes %></td>
                        <td>
                            <a href="/service/edit/<%= service.service_id %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="12" class="no-services">No services found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <a href="/service/add" class="add-button">Add New Patient</a>
</body>
</html>
