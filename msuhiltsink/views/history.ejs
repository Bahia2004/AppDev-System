<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap and Google Fonts -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
  <!-- Font Awesome Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
 <style>
  
body {
  background-color: #f0f4f8;
  font-family: 'Poppins', sans-serif;
  margin: 0;
  padding: 0;
}

.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 250px;
  background-color: #004d40;
  padding-top: 20px;
  color: white;
}

.sidebar-header {
  display: flex;
  align-items: center;
  padding: 0 20px;
  margin-bottom: 30px;
}

.sidebar-header img {
  width: 60px;
  height: 60px;
}

.sidebar-header h4 {
  margin-left: 15px;
  font-weight: 700;
  font-size: 1.2rem;
}

.sidebar a {
  display: block;
  padding: 12px 20px;
  color: white;
  text-decoration: none;
  margin-bottom: 15px;
}

.sidebar a:hover {
  background-color: #00695c;
  border-left: 5px solid #4caf50;
}

.sidebar a i {
  margin-right: 10px;
}

.content {
  margin-left: 240px;
  padding: 20px;
}

.container {
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 14px rgba(0, 0, 0, 0.2);
  margin-top: 20px;
}

h1 {
  text-align: center;
  font-size: 1.5rem;
  font-weight: 500;
  color: #00796b;
  margin-bottom: 20px;
}

h2 {
  font-size: 1.5rem;
  font-weight: 500;
  color: #00796b;
  margin-bottom: 20px;
}

.dropdown-menu a:hover,
.dropdown-menu a:focus {
  background-color: transparent;
  color: #00796b;
}

.dropdown-menu a:focus {
  box-shadow: none;
}

.btn-cat {
  background-color: #00796b;
  color: white;
  border: none;
  text-align: center;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 1rem;
  text-decoration: none;
  display: inline-block;
}

.btn-cat:hover {
  background-color: #004d40;
}

/* Table adjustments to match previous design style */
.table {
  width: 100%;
  margin-top: 20px;
  border-collapse: collapse;
  font-size: 0.875rem;
  background-color: #ffffff;
  box-shadow: 0 4px 14px rgba(0, 0, 0, 0.2);
}

.table th, .table td {
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

.table th {
  background-color: #00796b;
  color: white;
  font-weight: 600;
}

.table td {
  background-color: #f9f9f9;
}

.table-bordered {
  border: 1px solid #ddd;
}

.table-striped tbody tr:nth-child(odd) {
  background-color: #f2f2f2;
}

.table-hover tbody tr:hover {
  background-color: #e0f2f1;
}

.table-responsive {
  overflow-x: auto;
}

/* For smaller screens */
@media (max-width: 767px) {
  .sidebar {
    width: 200px;
  }

  .content {
    margin-left: 0;
    padding: 10px;
  }

  .container {
    max-width: 100%;
    padding: 15px;
  }

  h1 {
    font-size: 1.5rem;
  }

  h2 {
    font-size: 1.25rem;
  }

  .table th, .table td {
    font-size: 0.75rem;
    padding: 8px;
  }
}
 </style>
 
  
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="sidebar-header">
      <img src="https://mmc-enrollment.minsu.edu.ph/img/logo.png" alt="MSU Logo">
      <h4>MinSU HealthSync</h4>
    </div>
    <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
    <a href="/patient/list"><i class="fas fa-users"></i> Patient Records</a>
    <a href="/appointment"><i class="fas fa-calendar-alt"></i> Appointment</a>
    <a href="/inventory/list"><i class="fas fa-pills"></i> Medicine Inventory</a>
    <a href="/service/list"><i class="fas fa-briefcase-medical"></i> Medical Services</a>
    <a href="/history"><i class="fas fa-history"></i> History</a>
  </div>
  <!-- Main content area -->
  <div class="content">
    <div class="container">
      <p>Select which history:</p>
      <!-- Dropdown for Categories -->
      <div class="dropdown">
        <button class="btn btn-cat dropdown-toggle" type="button" id="categoryDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Choose History
        </button>
        <div class="dropdown-menu" aria-labelledby="categoryDropdown">
          <a class="dropdown-item" href="#" onclick="fetchHistory('medicine-inventory')">Medicine Inventory</a>
          <a class="dropdown-item" href="#" onclick="fetchHistory('patient-records')">Patient Records</a>
          <a class="dropdown-item" href="#" onclick="fetchHistory('services')">Service Records</a>
        </div>
      </div>
      <div id="historyContent" style="margin-top: 20px;">
        <h1>History Tables</h1>
        <table class="table table-bordered table-striped">
          <thead id="historyTableHeader">
            <tr>
              <!-- Headers will be updated dynamically -->
            </tr>
          </thead>
          <tbody id="historyTableBody">
            <tr>
              <td colspan="4">Loading...</td>
            </tr>
          </tbody>
        </table>
      </div>
      <script>
        function fetchHistory(category) {
          // Update table body with loading message
          const historyTableBody = document.getElementById('historyTableBody');
          historyTableBody.innerHTML = '<tr><td colspan="4">Loading...</td></tr>';

          // Update table header based on category
          const historyTableHeader = document.getElementById('historyTableHeader');
          let header = '';
          if (category === 'medicine-inventory') {
            header = `  
              <th>Item Name</th>
              <th>Category</th>
              <th>Quantity</th>
              <th>Expiry Date</th>
            `;
          } else if (category === 'patient-records') {
            header = `  
              <th>Patient ID</th>
              <th>Full Name</th>
              <th>Gender</th>
              <th>Address</th>
              <th>Contact</th>
              <th>Guardian</th>
              <th>Blood Type</th>
              <th>Height</th>
              <th>Weight</th>
              <th>Department</th>
              <th>Created At</th>
            `;
          } else if (category === 'services') {
            header = `  
              <th>Patient ID</th>
              <th>Date</th>
              <th>Service Type</th>
              <th>Patient Name</th>
              <th>Doctor in Charge</th>
              <th>Blood Pressure</th>
              <th>Respiratory Rate</th>
              <th>Pulse Rate</th>
              <th>Temperature</th>
              <th>Medication</th>
               <th>Quantity Used</th>
              <th>Medical Notes</th>
            `;
          }
          historyTableHeader.innerHTML = header;

          // Fetch data via AJAX
          fetch(`/history/${category}`)
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                let rows = '';

                // Handle each category and dynamically render rows
                if (category === 'medicine-inventory') {
                  rows = data.inventory.map(item => `  
                    <tr>
                      <td>${item.item_name}</td>
                      <td>${item.category}</td>
                      <td>${item.quantity}</td>
                      <td>${item.expiry_date}</td>
                    </tr>
                  `).join('');
                } else if (category === 'patient-records') {
                  rows = data.records.map(record => `  
                    <tr>
                      <td>${record.patient_id}</td>
                      <td>${record.fullName}</td>
                      <td>${record.gender}</td>
                      <td>${record.address}</td>
                      <td>${record.contact}</td>
                      <td>${record.guardian}</td>
                      <td>${record.bloodType}</td>
                      <td>${record.height}</td>
                      <td>${record.weight}</td>
                      <td>${record.department}</td>
                      <td>${record.created_at}</td>
                    </tr>
                  `).join('');
                } else if (category === 'services') {
                  rows = data.services.map(service => `  
                    <tr>
                      <td>${service.patient_id}</td>
                      <td>${service.date}</td>
                      <td>${service.service_type}</td>
                      <td>${service.patient_name}</td>
                      <td>${service.doctor_in_charge}</td>
                      <td>${service.blood_pressure}</td>
                      <td>${service.respiratory_rate}</td>
                      <td>${service.pulse_rate}</td>
                      <td>${service.temperature}</td>
                      <td>${service.medication}</td>
                      <td>${service.quantity_taken}</td>
                      <td>${service.medical_notes}</td>
                    </tr>
                  `).join('');
                }

                historyTableBody.innerHTML = rows;
              } else {
                historyTableBody.innerHTML = '<tr><td colspan="4">No data available</td></tr>';
              }
            });
        }

        // Load 'medicine-inventory' history by default
        document.addEventListener('DOMContentLoaded', function() {
          fetchHistory('medicine-inventory');
        });
      </script>
    </div>
  </div>
</body>
</html>
