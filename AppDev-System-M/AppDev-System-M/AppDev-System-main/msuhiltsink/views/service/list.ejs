<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service List - MSU HealthSync</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #e9f7f6; /* Light teal background for a clinic feel */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 220px;
            background-color: #2d3e3b; /* Dark green for sidebar */
            padding-top: 20px;
            padding-left: 15px;
        }

        .sidebar a {
            padding: 15px;
            text-align: left;
            display: block;
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .sidebar a:hover {
            background-color: #4CAF50; /* Highlight color on hover */
        }

        .content {
            margin-left: 240px;
            padding: 30px;
        }

        .content h1 {
            color: #2d3e3b; /* Matching color with sidebar */
            font-size: 36px;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #2d3e3b; /* Dark green header */
            color: white;
        }

        td {
            background-color: #fff; /* White background for rows */
            color: #333;
        }

        .btn {
            border-radius: 5px;
            font-size: 16px;
            padding: 10px 20px;
        }

        .btn-primary {
            background-color: #00796b; /* Teal button */
            border: none;
        }

        .btn-primary:hover {
            background-color: #004d40; /* Darker teal on hover */
        }

        .btn-warning {
            background-color: #ff9800; /* Orange button for edit */
            border: none;
        }

        .btn-warning:hover {
            background-color: #e68900; /* Darker orange on hover */
        }

        footer {
            margin-top: 30px;
            text-align: center;
            font-size: 14px;
            color: #888;
        }

        footer p {
            margin: 0;
        }

        a {
            display: inline-block;
            margin-top: 20px;
            font-size: 16px;
            color: #00796b;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="https://mmc-enrollment.minsu.edu.ph/img/logo.png" alt="MSU Logo" class="img-fluid mb-3" style="max-width: 80%; padding-left: 15px;">
        <a href="/dashboard">Dashboard</a>
        <a href="/patient/list">Patient Records</a>
        <a href="/appointment">Appointment</a>
        <a href="/inventory/list">Medicine Inventory</a>
        <a href="/service/list">Medical Services</a>
        <a href="/history">History</a>
    </div>

    <!-- Main content area -->
    <div class="content">
        <h1>Service List</h1>
        <a href="/service/add" class="btn btn-primary">Add New Service</a>

        <!-- Service Table -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>Patient Name</th>
                    <th>Doctor In Charge</th>
                    <th>Date</th>
                    <th>Service Type</th>
                    <th>Blood Pressure</th>
                    <th>Pulse Rate</th>
                    <th>Respiratory Rate</th>
                    <th>Temperature</th>
                    <th>Medication</th>
                    <th>Medical Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (services.length > 0) { %>
                    <% services.forEach(service => { %>
                        <tr>
                            <td><%= service.patient_id %></td>
                            <td><%= service.patient_name %></td>
                            <td><%= service.doctor_in_charge %></td>
                            <td><%= new Date(service.date).toLocaleDateString("en-US", { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                            <td><%= service.service_type %></td>
                            <td><%= service.blood_pressure %></td>
                            <td><%= service.pulse_rate %></td>
                            <td><%= service.respiratory_rate %></td>
                            <td><%= service.temperature %></td>
                            <td><%= service.medication %></td>
                            <td><%= service.medical_notes %></td>
                            <td>
                                <a href="/service/edit/<%= service.service_id %>" class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="12" class="text-center">No services found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <footer>
            <p>MSU HealthSync - Clinic Management System</p>
        </footer>
    </div>
</body>
</html>
